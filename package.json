{
	"name": "hide-git-ignored",
	"displayName": "Hide Git Ignored",
	"description": "Show/Hide git ignored files within the Explorer view",
	"version": "0.0.1",
	"license": "MIT",
	"keywords": [
		"git",
		"ignore",
		".gitignore",
		"show",
		"hide",
		"file",
		"explorer"
	],
	"galleryBanner": {
		"color": "#000000",
		"theme": "dark"
	},
	"publisher": "chrisbibby",
	"author": {
		"name": "Chris Bibby"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/ChrisBibby/vscode_hide-git-ignored.git"
	},
	"homepage": "https://github.com/ChrisBibby/vscode_hide-git-ignored",
	"bugs": "https://github.com/ChrisBibby/vscode_hide-git-ignored/issues",
	"engines": {
		"vscode": "^1.68.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hide-git-ignored.toggle",
				"title": "Show/Hide Git Ignored Files"
			}
		],
		"keybindings": [
			{
				"command": "hide-git-ignored.toggle",
				"key": "shift+ctrl+i",
				"mac": "shift+cmd+i"
			}
		]
	},
	"scripts": {
		"deploy": "vsce publish",
		"lint": "eslint src --ext ts --max-warnings=0",
		"fix:prettier": "prettier \"**/*.ts\" --write",
		"package": "vsce package",
		"vscode:prepublish": "npm run lint && webpack --mode production",
		"webpack": "webpack --mode production",
		"webpack-dev": "webpack --mode development"
	},
	"devDependencies": {
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.1",
		"@types/node": "16.x",
		"@types/vscode": "^1.68.0",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"@vscode/test-electron": "^2.1.3",
		"eslint": "^8.16.0",
		"glob": "^8.0.3",
		"ts-loader": "^9.3.0",
		"typescript": "^4.7.2",
		"webpack": "^5.72.1",
		"webpack-cli": "^4.9.2"
	}
}